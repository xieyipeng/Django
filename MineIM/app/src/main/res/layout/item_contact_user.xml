<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_contact_user_head_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:riv_oval="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/item_contact_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/item_contact_user_head_image"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/item_contact_user_head_image" />

    <TextView
        android:id="@+id/item_contact_user_is_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#949494"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/item_contact_user_head_image"
        android:textStyle="bold" />


</RelativeLayout>